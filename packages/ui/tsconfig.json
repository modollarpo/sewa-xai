{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "composite": true,
    "module": "esnext",
    "types": ["react"],
    "lib": ["dom", "esnext"],
    "ignoreDeprecations": "6.0"
