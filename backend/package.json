{
  "name": "sewa-backend",
  "version": "1.0.0",
  "description": "SEWA Healthcare AI Backend (NestJS)",
  "main": "dist/main.js",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main.js",
    "build": "nest build -p tsconfig.build.json",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate ./src/migrations/AutoGeneratedInitSchema -d ./src/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d ./src/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d ./src/data-source.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "dependencies": {
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.12",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.12",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.13.4",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cross-spawn": "^7.0.6",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.3",
    "mysql2": "^3.16.2",
    "nodemailer": "^7.0.13",
    "passport-jwt": "^4.0.1",
    "react-dev-utils": "^12.0.1",
    "reflect-metadata": "^0.1.14",
    "rimraf": "^3.0.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.28",
    "types": "file:../packages/types",
    "uuid": "^8.3.2",
    "webpack": "^5.104.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^11.1.12",
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.25",
    "@types/jest": "^29.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^18.0.0",
    "@types/nodemailer": "^7.0.9",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "jest": "^29.0.0",
    "prettier": "^2.8.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.9.5"
  }
}
